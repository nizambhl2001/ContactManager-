
@model List<AspNetCoreMvcJwtApp.Models.Person>

@{
    ViewData["Title"] = "All Persons";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">All Persons</h2>
        <a asp-action="Create" class="btn btn-primary">+ Add New Person</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No persons found.</div>
    }
    else
    {
        @foreach (var person in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">@person.Name</h4>

                    <div class="row">
                        <div class="col-md-6">
                            <h6>📞 Phones:</h6>
                            <ul class="list-group list-group-flush">
                                @foreach (var phone in person.Phones)
                                {
                                    <li class="list-group-item px-0">@phone.Number</li>
                                }
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>🏠 Addresses:</h6>
                            <ul class="list-group list-group-flush">
                                @foreach (var address in person.Addresses)
                                {
                                    <li class="list-group-item px-0">@address.Location</li>
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="mt-3 text-end">
                        <a asp-action="Edit" asp-route-id="@person.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
